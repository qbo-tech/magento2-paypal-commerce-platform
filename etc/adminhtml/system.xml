<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment" sortOrder="1000" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <group id="recommended_solutions" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <fieldset_css>paypal-top-section paypal-recommended-header</fieldset_css>
                <frontend_model>Magento\Paypal\Block\Adminhtml\System\Config\Fieldset\Expanded</frontend_model>
                <group id="paypal_checkout" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>PayPal Checkout Mexico</label>

                    <field id="active" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/paypalcheckout/active</config_path>
                    </field>
                    <field id="title" type="text" sortOrder="20" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>Title</label>
                        <config_path>payment/paypalcheckout/title</config_path>
                    </field>
                    <field id="sandbox_flag" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1">
                        <label>Sandbox Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <attribute type="shared">1</attribute>
                        <config_path>payment/paypalcheckout/sandbox_flag</config_path>
                    </field>

                    <field id="client_id" translate="label" type="obscure" sortOrder="40" showInDefault="1" showInWebsite="1">
                        <label>Client ID</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/paypalcheckout/client_id</config_path>
                    </field>
                    <field id="client_password" translate="label" type="obscure" sortOrder="40" showInDefault="1" showInWebsite="1">
                        <label>Client Password</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/paypalcheckout/client_password</config_path>
                    </field>
                    <!--
                <field id="api_sb_client_id" translate="label" type="obscure" sortOrder="50" showInDefault="1" showInWebsite="1">
                    <label>API Username</label>
                    <config_path>paypal/wpp/api_username</config_path>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <attribute type="shared">1</attribute>
                </field>
                <field id="api_password" translate="label" type="obscure" sortOrder="60" showInDefault="1" showInWebsite="1">
                    <label>API Password</label>
                    <config_path>paypal/wpp/api_password</config_path>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <attribute type="shared">1</attribute>
                </field>
-->
                    <field id="order_status" type="select" sortOrder="70" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>New Order Status</label>
                        <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                        <config_path>payment/paypalcheckout/order_status</config_path>
                    </field>
                    <field id="allowspecific" type="allowspecific" sortOrder="80" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>Payment from Applicable Countries</label>
                        <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                        <config_path>payment/paypalcheckout/allowspecific</config_path>
                    </field>
                    <field id="specificcountry" type="multiselect" sortOrder="90" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>Payment from Applicable Countries</label>
                        <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                        <can_be_empty>1</can_be_empty>
                        <config_path>payment/paypalcheckout/specificcountry</config_path>
                    </field>
                    <field id="sort_order" type="text" sortOrder="100" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                        <label>Sort Order</label>
                        <config_path>payment/paypalcheckout/sort_order</config_path>
                    </field>
                    <!--                 <field id="instructions" type="textarea" sortOrder="110" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>Instructions</label>
                    <config_path>payment/paypalcheckout/order_status</config_path>
                </field> -->
                    <group id="checkout_button" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="120">
                        <label>Button Options</label>
                        <field id="checkout_button_customize" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                            <label>Customize Button</label>
                            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                            <attribute type="shared">1</attribute>
                        </field>
                        <!--
                    <field id="checkout_button_mx_installment_period" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20">
                        <label>Mexico Installment Period</label>
                        <config_path>paypal/style/checkout_button_mx_installment_period</config_path>
                        <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getMxInstallmentPeriod</source_model>
                        <depends>
                            <field id="checkout_button_customize">1</field>
                            <field id="checkout_button_label">installment</field>
                        </depends>
                        <attribute type="shared">1</attribute>
                    </field>
                    <field id="checkout_button_br_installment_period" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20">
                        <label>Brazil Installment Period</label>
                        <config_path>paypal/style/checkout_button_br_installment_period</config_path>
                        <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getBrInstallmentPeriod</source_model>
                        <depends>
                            <field id="checkout_button_customize">1</field>
                            <field id="checkout_button_label">installment</field>
                        </depends>
                        <attribute type="shared">1</attribute>
                    </field> -->
                        <field id="layout" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="30">
                            <label>Layout</label>
                            <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getLayout</source_model>
                            <depends>
                                <field id="checkout_button_customize">1</field>
                                <field id="checkout_button_label" negative="1">credit</field>
                            </depends>
                            <attribute type="shared">1</attribute>
                        </field>
                        <field id="color" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="40">
                            <label>Color</label>
                            <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getColor</source_model>
                            <depends>
                                <field id="checkout_button_customize">1</field>
                                <field id="checkout_button_label" negative="1">credit</field>
                            </depends>
                            <attribute type="shared">1</attribute>
                        </field>
                        <field id="shape" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="50">
                            <label>Shape</label>
                            <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getShape</source_model>
                            <depends>
                                <field id="checkout_button_customize">1</field>
                            </depends>
                            <attribute type="shared">1</attribute>
                        </field>
                        <field id="label" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="60">
                            <label>Label</label>
                            <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getLabel</source_model>
                            <depends>
                                <field id="checkout_button_customize">1</field>
                            </depends>
                            <attribute type="shared">1</attribute>
                        </field>
                        <field id="tagline" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="50">
                            <label>Tagline</label>
                            <source_model>Qbo\PaypalSPB\Model\Config\Source\ButtonOptions::getTagline</source_model>
                            <depends>
                                <field id="checkout_button_customize">1</field>
                            </depends>
                            <attribute type="shared">1</attribute>
                        </field>
                    </group>
                </group>
            </group>
        </section>
    </system>
</config>
