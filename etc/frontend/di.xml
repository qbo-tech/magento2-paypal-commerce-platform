<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="paypal_cp_config_provider" xsi:type="object">PayPal\CommercePlatform\Model\PayPalCPConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="csrf_validator_skip" type="PayPal\CommercePlatform\Plugin\CsrfValidatorSkip" />
    </type>
    <type name="Magento\Payment\Block\Info">
        <plugin name="paypal_commerceplatform_view_override_template" type="PayPal\CommercePlatform\Plugin\Payment\Block\Info" />
    </type>
</config>
